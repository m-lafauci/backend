<div class="lista">
        {{#if products.length}}
        <h2>Catálago de discos</h2>

        <table style="width:60%">
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Thumbnail</th>
            </tr>
            {{#each products}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}USD</td>
                <td><img class="logo" src="{{this.thumbnail}}" /></td>
            </tr>
            {{/each}}
        </table>
        {{else}}
        <h2>Albúm no encontrado</h2>
        {{/if}}
        <h2>Centro de Mensajes</h2>
    </div>

    