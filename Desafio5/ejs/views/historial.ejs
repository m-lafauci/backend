<h2 style="color:brown;">Historial</h2>

<% if(productos.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
            <% for (const producto of productos) {%>
            <tr>
                <td><%=producto.nombre%></td>
                <td><%=producto.precio%></td>
                <td><img style="width:80px;height:80px"alt="sin imagen"src="<%=producto.imagen%>"></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">No se encontraron datos</h3>
<% } %>