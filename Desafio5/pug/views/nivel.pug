extends layout 


block renderizar
    div(class="jumbotron")
        h1(style="color:blue;") Ingresar datos
        br

        form(action="/productos" method="post")

            div(class="form-group")
                label(for="nombre") <b>Nombre</b>
                input(id="nombre" class="form-control" type="text" name="nombre")
        

            div(class="form-group")
                label(for="precio") <b>Precio</b>
                input(id="precio" class="form-control" type="number" name="precio")
        
            div(class="form-group")
                label(for="imagen") <b>URL de la Imagen</b>
                input(id="imagen" class="form-control" type="text" name="imagen")
            

            button(class="btn btn-success mt-3 mb-5") Enviar datos

        - const leyenda = "No se encontraron datos"
        h2(style="color:crimson;") Historial

            if productos.length > 0 
                div(class="table-responsive")
                    table(class="table table-dark")
                        tr(style="color: yellow") 
                            th Nombre 
                            th Precio
                            th Imagen

                        each producto in productos
                            tr
                                td!=producto.nombre
                                td!=producto.precio
                                td
                                    img(style="width: 80px;" src!=producto.imagen, alt="sin imagen")               
                            
            else 
                h3(class="alert alert-danger")=leyenda

            
            